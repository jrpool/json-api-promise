{
  "name": "json-api-promise",
  "description": "Express API using request-promise-native and cheerio to fetch HTML and responding with JSON.",
  "author": "Jonathan Pool",
  "license": "MIT",
  "private": false,
  "version": "0.0.0",
  "scripts": {
    "start": "DEBUG=json-api-promise:* node ./app",
    "startwin": "set DEBUG=json-api-promise:* node ./app",
    "lint": "eslint app.js; exit 0"
  },
  "dependencies": {
    "cheerio": ">=0.22.0",
    "express": "~4.14.1",
    "request": ">=2.81.0",
    "request-promise-native": ">=1.0.4"
  },
  "devDependencies": {
    "babel-preset-es2015": ">=6.24.1",
    "babel-register": ">=6.24.1",
    "eslint": "^4.0.0"
  },
  "bugs": {
    "url": "https://github.com/jrpool/json-api-promise.git/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jrpool/json-api-promise.git"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "browser": true,
      "es6": true,
      "mocha": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "sourceType": "module"
    },
    "rules": {
      "arrow-spacing": [
        "error",
        {
          "before": true,
          "after": true
        }
      ],
      "indent": [
        "error",
        2,
        {"MemberExpression": 0}
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "no-array-constructor": [
        "error"
      ],
      "no-cond-assign": [
        "off"
      ],
      "no-control-regex": [
        "off"
      ],
      "no-console": [
        "off"
      ],
      "no-const-assign": [
        "error"
      ],
      "no-new-object": [
        "error"
      ],
      "no-var": [
        "error"
      ],
      "no-whitespace-before-property": [
        "error"
      ],
      "prefer-const": [
        "warn"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ],
      "space-before-blocks": [
        "error",
        "always"
      ],
      "space-before-function-paren": [
        "error",
        "never"
      ],
      "space-in-parens": [
        "error",
        "never"
      ],
      "space-unary-ops": [
        "error",
        {
          "words": true,
          "nonwords": false
        }
      ],
      "spaced-comment": [
        "error",
        "always",
        {
          "markers": [
            "/",
            "*"
          ]
        }
      ]
    }
  }
}
